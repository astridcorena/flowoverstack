<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 mt-5">
      <h1>Hacer Pregunta</h1>

      <% if @question.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @question.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @question do |q| %>
        <div class="form-group">
          Título: <%= q.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el título de la Pregunta" %>
        </div>
        <div class="form-group">
          Cuerpo: <%= q.text_area :description, rows: 10, class: "form-control input-lg", placeholder: "Ingresa el cuerpo de la Pregunta" %>
        </div>
        	<%= q.hidden_field :user_id, value: current_user.id %>
        <div>
          <%= q.submit "Hacer Pregunta", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>